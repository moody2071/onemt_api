<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SplashScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowSplashScreenBackground">?windowSplashScreenBackground</item>
        <item name="android:windowSplashScreenAnimatedIcon">?windowSplashScreenAnimatedIcon</item>
        <item name="android:windowSplashScreenAnimationDuration">?windowSplashScreenAnimationDuration</item>
    </style>
    <style name="Theme.SplashScreen.IconBackground" parent="@style/Theme.SplashScreen">
        <item name="android:windowSplashScreenIconBackgroundColor">?windowSplashScreenIconBackgroundColor</item>
    </style>
    <style name="splashPictureLogo" parent="@style/Theme.SplashScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="postSplashScreenTheme">@style/appTheme</item>
        <item name="windowSplashScreenAnimatedIcon">@color/black</item>
        <item name="windowSplashScreenAnimationDuration">100</item>
        <item name="windowSplashScreenBackground">@color/black</item>
    </style>
    <style name="unitySplashPictureLogo" parent="@style/Theme.SplashScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="postSplashScreenTheme">@style/splashColorBlack</item>
        <item name="windowSplashScreenAnimatedIcon">@color/black</item>
        <item name="windowSplashScreenAnimationDuration">100</item>
        <item name="windowSplashScreenBackground">@color/black</item>
    </style>
    <style name="appTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_picture_logo</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>
